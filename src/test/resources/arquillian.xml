<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://jboss.org/schema/arquillian"
	xsi:schemaLocation="http://jboss.org/schema/arquillian http://www.jboss.org/schema/arquillian/arquillian_1_0.xsd">
	<defaultProtocol type="Servlet 3.0" />

	<engine>
		<property name="deploymentExportPath">target/deployments</property>
	</engine>
	<container qualifier="jboss" default="true">
		<configuration>
			<!-- http://www.mastertheboss.com/jboss-frameworks/arquillian/arquillian-tutorial -->
			<!-- the variable is defined in pom.xml -->
			<property name="jbossHome">${JBOSS_DIR}</property>
			<property name="javaHome">${JAVA_HOME}</property>
		</configuration>

	</container>

	<container qualifier="jbossDebug">
		<configuration>
			<property name="jbossHome">${JBOSS_DIR}</property>
			<property name="javaVmArguments">-agentlib:jdwp=transport=dt_socket,address=8787,server=y,suspend=y</property>
			<property name="javaHome">${JAVA_HOME}</property>
		</configuration>
	</container>



	<extension qualifier="persistence-dbunit">
		<property name="datatypeFactory">org.dbunit.ext.h2.H2DataTypeFactory</property>
		<property name="excludePoi">true</property>
	</extension>
	<extension qualifier="persistence">
		<property name="defaultCleanupPhase">BEFORE</property>
	</extension>




</arquillian>